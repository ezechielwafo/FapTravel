{% extends 'base.html.twig' %}

{% block title %}Visitor{% endblock %}

{% block body %}
    <h1>Visitor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ visitor.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ visitor.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ visitor.lastName }}</td>
            </tr>
            <tr>
                <th>IsPresent</th>
                <td>{{ visitor.isPresent ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ visitor.comment }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ visitor.createdAt ? visitor.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_visitor_index') }}">back to list</a>

    <a href="{{ path('app_visitor_edit', {'id': visitor.id}) }}">edit</a>

    {{ include('visitor/_delete_form.html.twig') }}
{% endblock %}
